RewriteEngine On
RewriteBase /

# Ignoruj istniejące pliki i foldery
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Wyjątki dla zasobów statycznych
RewriteCond %{REQUEST_URI} ^/(css|js|images|favicons)/
RewriteRule ^ - [L]

# Przekieruj ścieżki dashboardu do dashboard.html
RewriteRule ^dashboard(/.*)?$ dashboard.html [L]

# Przekieruj wszystko inne do backend/core/api.php
RewriteRule ^ backend/core/api.php [L]
